<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">
    <%- include('../partials/msg'); %>

    <header>
        <%- include('../partials/header'); %>
    </header>
    <!-- posicaocarga_ctrc -->

    <main>
        <div class="jumbotron">
            <h1>Posição da Carga - Conhecimento</h1>
            <h5><%= empresa %></h5>

            <form action="/posicaocargadoc" method="POST">
                <div class="form-group"> 
                    <div class="card-body">
                      
                     <div class="form-group row">
                            <label for="cod_ctrc" class="col-md-4 col-form-label text-md-right">CTRC</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" required id="cod_ctrc" name="cod_ctrc" value="<%= cod_ctrc %>" placeholder="XXX-XX-99999999">
                            </div>
                     </div>

                    <div class="form-group row"></div>

                    <div class="form-group row">
                        <label class="col-md-4 col-form-label text-md-right"></label>
                        <div class="col-md-3">
                            <input type="submit" class="btn btn-block btn-primary" value="Pesquisa">
                        </div>
                    </div>

                    </div>
                </div>
            </form>

    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>