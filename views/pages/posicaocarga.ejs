<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">
    <%- include('../partials/msg'); %>

    <header>
        <%- include('../partials/header'); %>
    </header>
    <!-- posicaocarga -->

    <main>
        <div class="jumbotron">
            <h1>Posição da Carga - Período </h1>
            <h5><%= empresa %></h5>

            <form action="/posicaocarga/lista" method="POST">
                <div class="form-group"> 
                    <div class="card-body">
                      
                     <div class="form-group row">
                            <label for="data_ini" class="col-md-4 col-form-label text-md-right">Data Inicial</label>
                            <div class="col-md-3">
                                <input type="date" class="form-control" required id="data_ini" name="data_ini" value="<%= data_ini %>" placeholder="Data Inicial">
                            </div>
                     </div>

                     <div class="form-group row">
                            <label for="data_fim" class="col-md-4 col-form-label text-md-right">Data Final</label>
                            <div class="col-md-3">
                                <input type="date" class="form-control" required id="data_fim" name="data_fim" value="<%= data_fim %>" placeholder="Data Final">
                            </div>
                    </div>

                    <div class="form-group row">
                                <div class="col-md-4"></div>
                                <div class="col-md-8">
                                
                                    <input class="col-md-1  form-check-input" type="checkbox" value="" name="gera_excel" id="gera_excel">
                                    <div class="col-md-1"> </div>
                                    <label class="col-md-8 form-check-label" for="gera_excel">
                                        &nbsp;Gera arquivo para o Excel
                                    </label>
                                </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-4 col-form-label text-md-right"></label>
                        <div class="col-md-3">
                            <input type="submit" class="btn btn-block btn-primary" value="Pesquisa">
                        </div>
                    </div>

                    </div>
                </div>
            </form>

    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>