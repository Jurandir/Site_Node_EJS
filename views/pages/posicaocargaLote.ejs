<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">
    <%- include('../partials/msg'); %>

    <header>
        <%- include('../partials/header'); %>
    </header>
    <!-- posicaocargaLote -->

    <main>
        <div class="jumbotron">
            <h1>Posição da Carga - Lote de NFs</h1>
            <h5><%= empresa %></h5>

            <form action="/posicaocargalote" method="POST">
                <div class="form-group"> 
                    <div class="card-body">

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label for="cnpj" class="col-form-label text-md-right">CNPJ:</label>
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" required id="cnpj" name="cnpj" value="<%= cnpj %>" placeholder="CNPJ">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label for="list_nfs" class="col-form-label text-md-right">Relação de NF´s:</label>
                            </div>   
                            <div class="col-md-10">
                                <textarea class="form-control" required id="list_nfs" name="list_nfs" rows="3" placeholder="Separadas por vírgulas"><%= list_nfs %></textarea>
                            </div>
                        </div>

                    <div class="form-group row"></div>

                    <div class="form-group row">
                        <label class="col-md-4 col-form-label text-md-right"></label>
                        <div class="col-md-3">
                            <input type="submit" class="btn btn-block btn-primary" value="Pesquisa">
                        </div>
                    </div>

                    </div>
                </div>
            </form>

    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>