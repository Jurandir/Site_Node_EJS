<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/head'); %>
</head>
<style>
    textarea {
        background-color: black;
        color: yellow;
    }
</style>
<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>Posição de Carga</h1>
            <h5><%= empresa %></h5>

            <table class="table table-hover table-dark">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@mdo</td>
                  </tr>
                  <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>@fat</td>
                  </tr>
                  <tr>
                    <th scope="row">3</th>
                    <td colspan="2">Larry the Bird</td>
                    <td>@twitter</td>
                  </tr>
                </tbody>
              </table>



                <div class="card-body">                     
                    <div class="row">
                            <div class="col-9">
                                <textarea name="resultado" rows="15" readonly style="width:100%;"><%= texto %></textarea>
                            </div>
                            <div class="col-3">
                                <a href="/posicaocarga" class="btn btn-large btn-block btn-primary">Nova Pesquisa</a>
                            </div>
                    </div>
                </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>