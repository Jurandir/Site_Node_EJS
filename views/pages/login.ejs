<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/head'); %>
</head>

<style type="text/css">
.center {
  display: block;
  margin-top: 15px;
  margin-left: auto;
  margin-right: auto;
}</style>

<body class="container">
    <%- include('../partials/msg'); %>

    <!-- login -->

    <main>
        <div class="col d-flex justify-content-center">
        <div class="card text-center" style="width: 30rem;" aling="center">
            <div class="row">
                
                    <img src="public/img/termacosic.png" alt="Termaco" class="center">
                
            </div>
            <form action="/login/check" method="POST">
                <div class="form-group"> 
                    <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <input type="number"  max="99999999999999" class="form-control" id="cnpj" name="cnpj" value="" placeholder="CNPJ ou CPF">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <input type="password" maxlength="10" id="pwd" name="pwd" value="" placeholder="Entre com sua senha" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <input type="submit" class="btn btn-block btn-primary" value="Login">
                        </div>
                    </div>
                    </div>
                </div>
            </form>
        </div>	
        </div> 

    </main>

</body>
</html>    
