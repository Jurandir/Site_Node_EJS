<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>Documento</h1>

            <form action="/documento/check" method="POST">
                <div class="form-group"> 
                    <div class="card-body">
                      
                      <div class="form-group row">
                            <label for="cnpj" class="col-md-4 col-form-label text-md-right">CNPJ ou CPF</label>
                            <div class="col-md-6">
                                <input type="number" class="form-control" required autofocus id="cnpj" name="cnpj" value="<%= cnpj %>" placeholder="CNPJ ou CPF">
                            </div>
                     </div>

                     <div class="form-group row">
                            <label for="numero" class="col-md-4 col-form-label text-md-right">Número</label>
                            <div class="col-md-6">
                                <input type="number" class="form-control" required id="numero" name="numero" value="<%= numero %>" placeholder="Numero do documento">
                            </div>
                     </div>

                     <div class="form-group row">
                            <label for="serie" class="col-md-4 col-form-label text-md-right">Série</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="serie" name="serie" value="<%= serie %>" placeholder="Série do documento">
                            </div>
                    </div>

                    <div class="form-group row"></div>

                    <div class="form-group row">
                        <label for="serie" class="col-md-4 col-form-label text-md-right"></label>
                        <div class="col-md-6">
                            <input type="submit" class="btn btn-block btn-primary" value="Pesquisa">
                        </div>
                    </div>

                    </div>
                </div>
            </form>

    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>